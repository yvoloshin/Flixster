<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1 class="font-color">What I'm Learning</h1>
	<% current_user.enrolled_courses.each do |course| %>
		<h3 class="text-center font-color"><%= link_to course.title, course_path(course) %></h3>
		<br />
		<%= image_tag course.image, :class => 'img-responsive' %> 
		<br />
		<div class="col-xs-12 col-sm-8">
			<%= course.description %>
		</div>
		<div class="col-xs-12 col-sm-4 text-center">
			<%= link_to "More Info...", course_path(course), :class => 'btn btn-large btn-primary' %>
		</div>
		<hr class="col-xs-8 col-offset-2">
		<br class="clr">
	<% end %>

	<h1 class="font-color">What I'm Teaching</h1>
	<% current_user.courses.each do |course| %>
	<h3 class="text-center font-color"><%= link_to course.title, course_path(course) %></h3>
		<br />
		<%= image_tag course.image, :class => 'img-responsive' %> 
		<br />
		<div class="col-xs-12 col-sm-8">
			<%= course.description %>
		</div>
		<div class="col-xs-12 col-sm-4 text-center">
			<%= link_to "More Info...", course_path(course), :class => 'btn btn-large btn-primary' %>
		</div>
		<hr class="col-xs-8 col-offset-2">
		<br class="clr">
	<% end %>


</div>